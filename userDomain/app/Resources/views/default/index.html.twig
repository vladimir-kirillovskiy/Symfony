{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            
            <h1> User List </h2>
            <table class="table">
                <thead>
                    <tr>
                        <th> Domain </th>
                        <th> Count </th>
                    </tr>
                </thead>
                <tbody>
                    {% for domain in domains %}
                        <tr>
                            <td> {{domain.domain}} </td>
                            <td> {{domain.count}} </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div style="text-align:center;">
                {% for i in 1..pages %}
                    <a href="/{{i}}"> {{i}} </i>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    #container {
        margin:auto;
        max-width: 800px;
    }
    </style>
{% endblock %}
